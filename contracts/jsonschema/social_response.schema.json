{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SocialResponse",
  "type": "object",
  "required": ["dialogue"],
  "properties": {
    "dialogue": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["speaker", "utterance"],
        "properties": {
          "speaker": { "type": "string" },
          "utterance": { "type": "string" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "nextSteps": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
